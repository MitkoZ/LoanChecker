<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/user_greetings_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right" />

    <LinearLayout
        android:id="@+id/my_money_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/my_money_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/my_money" />

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="addBanknotes"
        android:text="@string/edit_my_money" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="addCurrency"
        android:text="@string/add_possible_currency" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="giveALoan"
        android:text="@string/give_a_loan" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/loan_collector"
        android:onClick="getAvailableLoans"
        />

</LinearLayout>